// Given a number N and a value K. From the right, set the Kth bit in the binary representation of N.
//The position of Least Significant Bit(or last bit) is 0, the second last bit is 1 and so on. 


/*

N = 10 
K = 2

o/p = 14

*/

#include<bits/stdc++.h>
using namespace std;

int main()
{

  int n = 10;
  int k =2;
  
  n = (n | (1<<k));
  cout<< n <<endl;
}
